<div class="index-page-header">
   <h1>All Items <%= link_to "Add New Item", new_item_url, class: "button-add" %></h1>
</div>
<% @items.each do |item| %>
  <section class="movie">
  <div class="image">
    <%= image_tag item.image_file_name %>
    </div>
    <div class="summary">
      <h2>
        <%= link_to(item.name, item_path(item)) %><%= render "shared/stars", percent: item.stars_as_percent %>
      </h2>
      <% if item.found_on.present? %>
        <h3>Found <%= format_found_on(item) %></h3>
      <% end %>
<%# truncate movie description to 100 characters and cuts off during a space not mid-word%>
      <p>
         <%= truncate(item.description, length: 200, separator: ' ') %>
      </p>
    </div>
  </section>
<% end %>



