<h1>All Brands (<%= Brand.all.size %>):</h1>
<% if current_user && current_user.admin? %>
<p>You have permission to modify this list.</p>
<% else %>
<p>Only admins can modify this list.</p>
<% end %>

<ul>
<div class="li-brands">
<% @brands.order("name asc").each do |brand| %>
<% if current_user && current_user.admin? %>
 <li><%= link_to brand.name, edit_brand_url(brand) %></li>
<% else %>
 <li><%= brand.name %></li>
<% end %>
<% end %>
</div>
</ul>
 <%= will_paginate @brands %>  

<section class="admin">
<% if current_user && current_user.admin? %>
<%= link_to "Add a Brand", new_brand_url, class: "button-add" %>
<% else %>
<% end %>
</section>






