<section class="user">
  <%= profile_image(@user) %>
  <div class="index-page-header">
  <h1><%= @user.name %> 
    <% if @user.username.present? %>
    (<%= @user.username %>)
    <% end %>
    <% if current_user?(@user) %>
  &#8196;<%= link_to "View Your Items", user_items_url(@user), class: "button-no-float" %> 
  <% else %>
    &#8196;<%= link_to "View #{@user.name}'s Items", user_items_url(@user), class: "button-no-float" %> 
  <% end %>
  </h1>
  </div>
  <h2><%= mail_to(@user.email) %></h2>
  <p> Member Since
    <%= @user.created_at.strftime("%B %Y") %>
  </p>

<% if current_user?(@user) %>
  <div class="actions">
        <%= link_to "Edit Account", edit_user_path(@user),
        class: "button edit" %>

        <%= link_to "Delete Account", @user, method: :delete, 
        data: { confirm: "Permanently delete account?! \nThis cannot be undone." },
        class: "button delete" %>
  </div>
 <% end %> 

</section>

